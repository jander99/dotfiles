## Aliases that make my work easier
#  The aim is to make sure these are compatible with zsh and bash

system_type=$(uname -s)

# PS
alias psa="ps aux"
alias psef="ps -ef"

# Human Friendly df and dh
alias df="df -h"
alias dh="dh -h"

# Things for fun
alias bruh="brew"

# Docker
alias dps='docker ps --format "table {{.Names}}\t{{.Status}}"'

# yq
alias yqc="yq r -C"

# Cyberark PIMSSH
alias pimqablk="ssh -o PreferredAuthentications=password -o PubkeyAuthentication=no -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no $USER@sshblk11@ln2fe7.homedepot.com@pimssh-qa.homedepot.com"
alias pimprblk="ssh -o PreferredAuthentications=password -o PubkeyAuthentication=no -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no $USER@sshblk11@lp3034.homedepot.com@pimssh.homedepot.com"

# Kubernetes
alias k=kubectl

# Terraform
alias t=terraform